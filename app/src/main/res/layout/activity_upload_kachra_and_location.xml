<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/trash_can"
    tools:context=".ActivityUploadKachraAndLocation"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <Button
            android:id="@+id/buttonChooseImage"
            android:layout_width="250dp"
            android:layout_height="61dp"
            android:text="ChooseImageFile"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="#DF03A9F4"
            />


        <EditText
            android:id="@+id/description"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="Enter Vicinity Of Trash"
            android:padding="5dp"
            android:background="#BAFD0000"
            android:textColorHint="#030000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/requestImageView"
            android:layout_width="500dp"
            android:layout_height="500dp"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="168dp"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="#000"
            />


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="368dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            />


        <Button
            android:id="@+id/buttonUploadFile"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="upload trash"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:visibility="gone"
            android:textSize="30sp"
            android:background="#C904ECD4"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            />



    </LinearLayout>

</ScrollView>